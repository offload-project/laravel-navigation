{
  "name": "offload-project/laravel-navigation",
  "description": "Configurable navigation package for Laravel with breadcrumb and tree generation",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/offload-project/laravel-navigation",
  "keywords": [
    "laravel",
    "navigation",
    "nav",
    "wayfinder"
  ],
  "authors": [
    {
      "name": "Offload Project"
    }
  ],
  "require": {
    "php": "^8.3",
    "illuminate/routing": "^11.0|^12.0",
    "illuminate/support": "^11.0|^12.0"
  },
  "require-dev": {
    "larastan/larastan": "^3.8.1",
    "laravel/pint": "^1.26.0",
    "laravel/wayfinder": "^0.1.12",
    "orchestra/testbench": "^9.15|^10.8",
    "pestphp/pest": "^3.0|^4.0",
    "pestphp/pest-plugin-laravel": "^3.0|^4.0",
    "spatie/laravel-data": "^4.18"
  },
  "autoload": {
    "psr-4": {
      "OffloadProject\\Navigation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OffloadProject\\Navigation\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "OffloadProject\\Navigation\\NavigationServiceProvider"
      ],
      "aliases": {
        "Navigation": "OffloadProject\\Navigation\\Facades\\Navigation"
      }
    }
  },
  "scripts": {
    "test": "pest",
    "test-coverage": "pest --coverage",
    "analyse": "phpstan analyse --memory-limit=-1",
    "analyse-baseline": "phpstan analyse --memory-limit=-1 --generate-baseline",
    "pint": "vendor/bin/pint"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
